    <script src="~/Public/vendors/iCheck/icheck.js" type="text/javascript"></script>
    <script src="~/Public/vendors/datatables/js/jquery.dataTables.js" type="text/javascript"></script>
    <script src="~/Public/vendors/datatables/js/dataTables.bootstrap.js" type="text/javascript"></script>
    <script src="~/Public/vendors/bootstrapvalidator/dist/js/bootstrapValidator.js" type="text/javascript"></script>
    @*<script src="vendors/sweetalert/dist/sweetalert2.js" type="text/javascript"></script>*@
    @*<script src="~/Public/js/custom_js/course_schedule.js" type="text/javascript"></script>*@
