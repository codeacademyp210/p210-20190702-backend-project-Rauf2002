@model IEnumerable<FitGo.Models.Users>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutTemplate.cshtml";
}

@section style{
    <!--page level css -->
    <title>Users List</title>
    <link type="text/css" href="~/Public/vendors/jasny-bootstrap/css/jasny-bootstrap.min.css" rel="stylesheet">
    <link type="text/css" href="~/Public/vendors/datatables/css/dataTables.bootstrap.css" rel="stylesheet" />
    <link type="text/css" href="~/Public/vendors/sweetalert/dist/sweetalert2.css" rel="stylesheet" />
    <link type="text/css" href="~/Public/css/custom_css/users_list.css" rel="stylesheet" />
    <!--end of page level css-->
}


<aside class="right-side right-padding">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <!--section starts-->
        <h2>Users List</h2>
        <ol class="breadcrumb">
            <li>
                <a href="index.html">
                    <i class="fa fa-fw fa-home"></i> Dashboard
                </a>
            </li>
            <li>
                <a href="#">Users</a>
            </li>
            <li>
                <a href="admin_userlist.html">Users List</a>
            </li>
        </ol>
    </section>
    <!--section ends-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12 col-lg-12">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <i class="fa fa-fw fa-line-chart"></i> Users Trend
                        </h4>
                        <span class="pull-right">
                            <i class="glyphicon glyphicon-chevron-up showhide clickable"></i>
                            <i class="glyphicon glyphicon-remove removepanel"></i>
                        </span>
                    </div>
                    <div class="panel-body">
                        <div id="bar-chart-stacked" class="flotChart1"></div>
                    </div>
                </div>
            </div>
        </div>
        <!--main content-->
        <div class="row">
            <div class="col-lg-12">
                <!-- Basic charts strats here-->
                <div class="panel panel-danger">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <i class="fa fa-fw fa-file-text-o"></i> Users List
                        </h4>
                        <span class="pull-right">
                            <i class="glyphicon glyphicon-chevron-up showhide clickable"></i>
                            <i class="glyphicon glyphicon-remove removepanel"></i>
                        </span>
                    </div>
                    <div class="panel-body table-responsive">
                        <table class="table table-bordered" id="fitness-table">
                            <thead>
                                <tr>
                                    <th class="hidden">Id</th>
                                    <th>Username</th>
                                    <th>Email</th>
                                    <th>Contact Number</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model)
                                {
                                    <tr>
                                        <td class="hidden">@user.Id</td>
                                        <td>@user.Name</td>
                                        <td>@user.Email</td>
                                        <td>@user.Number</td>
                                        <td>
                                            <a class="edit btn btn-primary" href="@Url.Action("Edit",new { id = user.Id})">
                                                <i class="fa fa-fw fa-edit"></i> Edit
                                            </a>
                                        </td>
                                        <td>
                                            <a class="delete btn btn-danger" >
                                                <i class="fa fa-trash-o"></i> Delete
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- col-md-6 -->
        <!--row -->
    </div>
    <!--row ends-->
    <!-- /.content -->
</aside>


@section script{
    <!-- begining of page level js -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="~/Public/vendors/datatables/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="~/Public/vendors/datatables/js/dataTables.bootstrap.js" type="text/javascript"></script>
    <script src="~/Public/vendors/jasny-bootstrap/js/jasny-bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Public/vendors/chartsjs/floatchart/jquery.flot.min.js" type="text/javascript"></script>
    <script src="~/Public/vendors/chartsjs/floatchart/jquery.flot.resize.min.js" type="text/javascript"></script>
    <script src="~/Public/vendors/chartsjs/floatchart/jquery.flot.categories.js" type="text/javascript"></script>
    <script src="~/Public/vendors/chartsjs/floatchart/jquery.flot.tooltip.js" type="text/javascript"></script>
    @*<script src="vendors/sweetalert/dist/sweetalert2.js" type="text/javascript"></script>
        <script src="js/custom_js/users_list.js" type="text/javascript"></script>*@
    <!-- end of page level js -->
}

@section myScript{
    <script>
        $(document).ready(function () {
            $(".delete").click(function () {
                var _this = this;

                swal({
                    title: "Are you sure?",
                    text: "Once deleted, you will not be able to recover this !",
                    icon: "warning",
                    buttons: true,
                    dangerMode: true,
                })
                    .then((willDelete) => {
                        if (willDelete) {

                            var myId = _this.parentElement.parentElement.firstElementChild.innerHTML;
                            console.log(myId);
                            $.ajax({
                                url: "User/Delete",
                                type: "GET",
                                data: ({ Id: myId })
                            });
                            location.reload();
                        }
                    });
            });
        });
    </script>
}

